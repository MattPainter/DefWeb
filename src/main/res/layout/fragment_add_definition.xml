<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.matt.defweb.AddDefinitionActivity$PlaceholderFragment">

    <EditText
        android:id="@+id/textview_definition_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Enter definition name"/>


    <EditText
        android:id="@+id/textview_definition_body"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Enter body text for definition"
        android:layout_below="@id/textview_definition_name"/>

    <Button
        android:id="@+id/button_add_definition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_definition_body"
        android:onClick="add"/>

</RelativeLayout>
